{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "type": "shell",
    "tasks": [{
            "label": "執行",
            "command": "chcp 65001 && \"${workspaceRoot}/tools/w3x2lni/bin/w3x2lni-lua.exe\"",
            "args": [
                ".\\tools\\執行.lua",
                "${workspaceRoot}"
            ]
        },
        {
            "label": "配置",
            "command": "chcp 65001 && \"${workspaceRoot}/tools/w3x2lni/bin/w3x2lni-lua.exe\"",
            "args": [
                ".\\tools\\配置.lua",
                "${workspaceRoot}"
            ]
        },
        {
            "label": "外部編輯格式(Lni)",
            "command": "chcp 65001 && \"${workspaceRoot}/tools/w3x2lni/w2l.exe\"",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "new"
            },
            "args": [
                "lni",
                "${workspaceRoot}/TheTiltedCLockTower.w3x",
                "${workspaceRoot}"
            ]
        },
        {
            "label": "WE編輯格式(Obj)",
            "command": "chcp 65001 && \"${workspaceRoot}/tools/w3x2lni/w2l.exe\"",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "new"
            },
            "args": [
                "obj",
                "${workspaceRoot}",
                "${workspaceRoot}/TheTiltedCLockTower.w3x"
            ]
        },
        {
            "label": "地圖發佈格式(Slk)",
            "command": "chcp 65001 && \"${workspaceRoot}/tools/w3x2lni/w2l.exe\"",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "new"
            },
            "args": [
                "slk",
                "${workspaceRoot}",
                "${workspaceRoot}/TheTiltedCLockTower.w3x"
            ]
        }
    ]
}